// Prisma schema for MySQL (Inquiry leads + future expansion)
// datasource and generator placeholders.
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model InquiryLead {
  id             Int      @id @default(autoincrement())
  name           String
  company        String?  @db.VarChar(150)
  email          String   @db.VarChar(180)
  phone          String?  @db.VarChar(60)
  country        String?  @db.VarChar(100)
  desiredService String?  @db.VarChar(120)
  message        String   @db.Text
  source         String?  @db.VarChar(120)
  status         LeadStatus @default(NEW)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

enum LeadStatus {
  NEW
  REVIEWED
  CONTACTED
  CLOSED
}

